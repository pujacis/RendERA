
@{
    ViewData["Title"] = "EditTeam";
    Layout = null;
}
@model RendERA.DB.ViewModels.TeamVM

<h2 style="padding: 8px;">Edit Team</h2>
<form enctype="multipart/form-data" asp-action="EditTeam">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input asp-for="Id" hidden />
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <input asp-for="Name" class="col-md-4 msgForm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Degination" class="col-md-2 control-label"></label>
                <input asp-for="Degination" class="col-md-4 msgForm" />
                <span asp-validation-for="Degination" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <div class="form-group col-md-2">
                    <label asp-for="ProfileImage" class=" control-label"></label>
                </div>
                <div class="form-group col-md-4">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <div class=" col-md-2">
                    @if (Model.ProfilePicture != null)
                    {
                        <img src="~/ProfileImg/@Model.ProfilePicture"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input style="padding: 8px;" class="btn bt-danger right" type="submit" value="submit" />
        <a asp-action="Index"><button style="padding: 8px;" type="button"><i class=""></i> Back to List</button></a>
    </div>
</form>
<div class="js-fake-scroll"></div>
<script type="text/javascript">

    function backToList() {
        window.location.assign(document.location.origin +'/Teams');
    };
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
   
    
</script>
