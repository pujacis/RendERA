@model RendERA.DB.ViewModels.DocumentVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div  class="content js-content">
        <div style="padding:3%" class="content_item">
            <h2>Delete Document</h2>

            <p>Are you sure you want to delete this?</p>
            <div>
                <hr />
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        Document Name
                    </dt>
                    <dd class="col-sm-10">
                        Job-@Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        From
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UploadedByName)
                    </dd>
                    <dt class="col-sm-2">
                        Posted Date
                    </dt>
                    <dd class="col-sm-10">
                        @Model.DatePosted.ToString("MM/dd/yyyy hh:mm tt")
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" style="padding: 8px;" class="btn bt-danger right"  value="Delete"> |
                    <a asp-action="DocumentList">Back to List</a>
                </form>
            </div>
        </div>  
    </div>
