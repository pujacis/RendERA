@model RendERA.DB.ViewModels.DocumentVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div  class="content js-content">
        <div style="padding:3% ;color:forestgreen" class="content_item">
            <h2 style="color:forestgreen">Delete Document</h2>

        <p style="color:forestgreen">Are you sure you want to delete this?</p>
            <div>
                <hr />
                <br />
                <dl class="row">
                <dt class="col-sm-2" style="color:forestgreen">
                        Document Name
                    </dt>
                <dd class="col-sm-10 " style="color:forestgreen">
                        Job-@Html.DisplayFor(model => model.Id)
                    </dd>
                <dt class="col-sm-2" style="color:forestgreen">
                        From
                    </dt>
                <dd class="col-sm-10" style="color:forestgreen">
                        @Html.DisplayFor(model => model.UploadedByName)
                    </dd>
                <dt class="col-sm-2" style="color:forestgreen">
                        Posted Date
                    </dt>
                <dd class="col-sm-10" style="color:forestgreen">
                        @Model.DatePosted.ToString("MM/dd/yyyy hh:mm tt")
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" style="padding: 8px;" class="btn bt-danger right"  value="Delete"> |
                <a asp-action="DocumentList" style="color:forestgreen">Back to List</a>
                </form>
            </div>
        </div>  
    </div>
