@model RendERA.DB.ViewModels.DocParametersMapVM
<span style="color:red" id="warningMsg"></span>
<form asp-controller="Parameters" asp-action="SetParameter" method="post" class="form-horizontal" role="form" id="submitfrom">
    <fieldset class="form-group">

        <div class="checkbox checkboxlist col-sm-12" id="find-table">

            <input asp-for="Amount" hidden />
            <input asp-for="Amount" hidden />
            <input asp-for="DocumentId" hidden />
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5"><h3>Name</h3></div>
                <div class="col-md-5"><h3>Price</h3></div>
            </div>


        </div>
        <div class="form-group">
            <div class="row">
                <div style="float: right;margin: 0 20% 0 0 ;">
                    <p   style="color:white;padding :3px   31px;font-weight:bold"><span> price - </span><span id="price"></span> $</p>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="modal-footer">
        <button type="button" class="" style="padding: 8px;" data-dismiss="modal">Close</button>
    </div>
</form>

<script>

$("#submitbutton").click(function () {
    var price = 0;
    $("input:checkbox[class=list]:checked").each(function () {
        var priceval = $(this).attr("val");
        price = parseFloat(priceval) + price;
    });
    $("#price").text(price.toFixed(2));
    $("#Amount").val(price.toFixed(2));
    if (price == 0) {
        $("#warningMsg").text("Please select parameter");
    }
    else {
        $('#submitfrom').submit();
    }
});
$("#button").click(function () {
    var price = 0;
    $("input:checkbox[class=list]:checked").each(function () {
        var priceval = $(this).attr("val");
        price = parseFloat(priceval) + price;
    });
    $("#price").text(price.toFixed(2));
    $("#Amount").val(price.toFixed(2));
});
    $(document).ready(function () {
        var price = 0;
    $("input:checkbox[class=list]:checked").each(function () {
        var priceval = $(this).attr("val");
        price = parseFloat(priceval) + price;
    });
    $("#price").text(price.toFixed(2));
    $("#Amount").val(price.toFixed(2));
    });
</script>