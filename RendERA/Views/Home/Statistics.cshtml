
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="state">

    <!-- Tabs -->
    <section id="tabs">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 ">
                    <nav>
                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Job statistics</a>
                            <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Consumption statistics</a>
                        </div>
                    </nav>
                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                        <div class="tab-pane fade active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                            <select class="form-control">
                                <option class="disabled">By number of new jobs</option>
                                <option> By number of new frames</option>
                                <option> By number of new jobs </option>
                                <option> By number of cumulative frames </option>
                                <option> By number of cumulative jobs </option>


                            </select>
                        </div>
                        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                            <select class="form-control">
                                <option class="disabled">By new consumption</option>
                                <option> By cumulative consumption </option>
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <select class="form-control" name="id" id="id">
                                    <option>By Account</option>
                                </select>
                            </span>

                            <span class="input-group-btn">
                                <select class="form-control" name="id" id="id">
                                    <option>Last 30 days</option>
                                </select>
                            </span>

                            <span class="input-group-btn">
                                <select class="form-control" name="nr" id="nr">
                                    <option value=""></option>
                                </select>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <div class="modal fade" id="myNotificationModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content" id="" style=" width: 53%; margin-left: 23%;">
                <div class="modal-header" style=" background: #3f4041;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body" id="Trackingbodydata" style="padding: 0 56px;background: #3f4041;">


                </div>
                <div class="modal-footer" style=" background: #3f4041;">
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.Msg != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Msg");
            };
        </script>
    }

    <script>
        function showActive() {
            var element = document.getElementById("Statistics");
            element.classList.add("active");
        }
        showActive();
    </script>
