@model RendERA.DB.ViewModels.ProjectVM

<h3 style="padding: 8px; color:forestgreen">Create Project</h3>
<form  enctype="multipart/form-data" asp-action="CreateProject">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Name" style="color:forestgreen" class="col-md-2 control-label"></label>
                <input asp-for="Name" class="col-md-4 msgForm" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Status" style="color:forestgreen" class="col-md-2 control-label"></label>
                <select class="col-md-4" asp-for="Status" id="StatusList" asp-items="@Model.StatusList"></select>
                <span asp-validation-for="Status" id="statusmsg" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input style="padding: 8px;"   class="btn bt-danger right" type="submit" value="submit" />
        <a asp-action="Index"><button style="padding: 8px;" type="button"><i class=""></i> Back to List</button></a>
    </div>
</form>
<div class="js-fake-scroll"></div>
<script type="text/javascript">
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
     $('#ProjectSubmitbutton').click(function () {
        if ($("#StatusList").val() == '0') {
            $('#documentmsg').text("Please select Status");
        }
        else {
           $('#ProjectForm1').submit();
        }
    });
</script>
